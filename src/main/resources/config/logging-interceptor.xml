<?xml version="1.0" encoding="UTF-8" ?> 
 <beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">

  <!--  Interceptor Declaration Begins --> 
  <bean id="interceptor" class="com.cathaypacific.mbcommon.loging.PerformanceLogInterceptor" /> 
 
  <!--  AOP Around Advice --> 
  <aop:config>
   <aop:aspect ref="interceptor">
    <aop:pointcut id="interceptorMethod" expression="execution(@com.cathaypacific.mbcommon.loging.LogPerformance public * *(..))" /> 
    <aop:around pointcut-ref="interceptorMethod" method="logPerformance" /> 
   </aop:aspect>
  </aop:config>
  <!--  Interceptor Declaration Ends  --> 
  
 </beans>